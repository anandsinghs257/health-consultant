 <div class="container"> 
  <div class="row"> 
    <div class="col-md-8 offset-md-2">
      <%= form_for ([:admin, @doctor]) do |f| %>
        <% if doctor.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

            <ul>
            <% @doctor.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="card mt-4">
          <div class="card-header">
            <h3 class="card-title">Personal Information</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :first_name %>
                  <%= f.text_field :first_name, id: :doctor_first_name, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :last_name %>
                  <%= f.text_field :last_name, id: :doctor_last_name, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :age %>
                  <%= f.number_field :age, id: :doctor_age, class: "form-control", min: "0" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :gender %>
                  <%= f.text_field :gender, id: :doctor_gender, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="card mt-4">
          <div class="card-header">
            <h3 class="card-title">Address Information</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :address %>
                  <%= f.text_field :address, id: :doctor_address, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :city %>
                  <%= f.text_field :city, id: :doctor_city, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :state %>
                  <%= f.text_field :state, id: :doctor_state, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :country %>
                  <%= f.text_field :country, id: :doctor_country, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :zipcode %>
                  <%= f.text_field :zipcode, id: :doctor_zipcode, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>


        <div class="card mt-4">
          <div class="card-header">
            <h3 class="card-title">General Information</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.label :about %>
                  <%= f.text_area :about, id: :doctor_about, class: "form-control ckeditor" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :contact %>
                  <%= f.text_field :contact, id: :doctor_contact, class: "form-control" %>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :profile_photo %><br>
                  <%= f.file_field :profile_photo, id: :doctor_profile_photo %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :total_experience %>
                  <%= f.number_field :total_experience_years, id: :doctor_total_experience_years, class: "form-control" %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr>

        <div class="card mt-4">
          <div class="card-header">
            <h3 class="card-title">Add Morning Slots</h3>
          </div>
          <div class="card-body">
            <div id="doctor_available_slots">
              <%= f.fields_for :morning_slots do |morning_slot| %>
                <%= render 'morning_slot_fields', f: morning_slot %>
              <% end %>
              <div class="links">
                <%= link_to_add_association 'Add', f, :morning_slots, class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>
        <hr>

        <div class="card mt-4">
          <div class="card-header">
            <h3 class="card-title">Add Afternoon Slots</h3>
          </div>
          <div class="card-body">
            <div id="doctor_available_slots">
              <%= f.fields_for :afternoon_slots do |afternoon_slot| %>
                <%= render 'afternoon_slot_fields', f: afternoon_slot %>
              <% end %>
              <div class="links">
                <%= link_to_add_association 'Add', f, :afternoon_slots, class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>

        <div class="card mt-4 mb-4">
          <div class="card-header">
            <h3 class="card-title">Add Eventing Slots</h3>
          </div>
          <div class="card-body">
            <div id="doctor_available_slots">
              <%= f.fields_for :evening_slots do |evening_slot| %>
                <%= render 'evening_slot_fields', f: evening_slot %>
              <% end %>
              <div class="links">
                <%= link_to_add_association 'Add', f, :evening_slots, class: "btn btn-success" %>
              </div>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".ckeditor").ckeditor();
</script> 
