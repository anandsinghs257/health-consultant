<div class="container"> 
  <div class="row"> 
    <div class="col-md-8 offset-md-2">
      <%= form_for ([:admin, @doctor]) do |f| %>
        <% if doctor.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@doctor.errors.count, "error") %> prohibited this doctor from being saved:</h2>

            <ul>
            <% @doctor.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, id: :doctor_first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, id: :doctor_last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, id: :doctor_address, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :city %>
          <%= f.text_field :city, id: :doctor_city, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :state %>
          <%= f.text_field :state, id: :doctor_state, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :country %>
          <%= f.text_field :country, id: :doctor_country, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :zipcode %>
          <%= f.text_field :zipcode, id: :doctor_zipcode, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :contact %>
          <%= f.text_field :contact, id: :doctor_contact, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :profile_photo %><br>
          <%= f.file_field :profile_photo, id: :doctor_profile_photo %>
        </div>

        <div class="form-group">
          <%= f.label :about %>
          <%= f.text_area :about, id: :doctor_about, class: "form-control ckeditor" %>
        </div>

        <div class="form-group">
          <%= f.label :age %>
          <%= f.number_field :age, id: :doctor_age, class: "form-control", min: "0" %>
        </div>

        <div class="form-group">
          <%= f.label :gender %>
          <%= f.text_field :gender, id: :doctor_gender, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :total_experience %>
          <%= f.number_field :total_experience_years, id: :doctor_total_experience_years, class: "form-control" %>
        </div>

        <h3>Doctor Available Slots</h3>
        <div id="doctor_available_slots">
          <%= f.fields_for :doctor_available_slots do |doctor_available_slot| %>
            <%= render 'doctor_available_slot_fields', f: doctor_available_slot %>
          <% end %>
          <div class="links">
            <%= link_to_add_association 'Add Slot', f, :doctor_available_slots, class: "btn btn-success" %>
          </div>
        </div>


        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(".ckeditor").ckeditor();
</script>