<div class="container">
  <h1>Specialization Areas</h1>

  <table class="table table-bordered" id="specialization-areas">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @specialization_areas.each do |specialization_area| %>
        <tr>
          <td><%= specialization_area.name %></td>
          <td><%= specialization_area.description %></td>
          <td>
            <%= link_to admin_specialization_area_path(specialization_area),  class: "btn btn-primary" do %>
              <i class="fa fa-eye"></i>
            <% end %>
            <%= link_to edit_admin_specialization_area_path(specialization_area),  class: "btn btn-warning" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to admin_specialization_area_path(specialization_area), method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-danger" do %>
              <i class="fa fa-trash"></i>
            <% end %>     
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Specialization Area', new_admin_specialization_area_path %>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $('#specialization-areas').DataTable();
  });
</script>